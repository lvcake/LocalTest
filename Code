# 557.Reverse Words in a String III
# https://leetcode.com/problems/reverse-words-in-a-string-iii/description/

public class Main {

    private static String reverseWords(String s) {
        StringBuilder reverseWords = new StringBuilder();
        StringBuilder new_s = new StringBuilder(s);
        new_s.append(' ');
        String long_s = new_s.toString();
        int m = 0;
        for(int i=0; i<long_s.length(); i++){
            if(long_s.charAt(i)==' '){
                String substr = long_s.substring(m, i+1);
                reverseWords.append(reverseString(substr));
                m=i+1;
                ++i;
            }
        }
        if(reverseWords.charAt(reverseWords.length()-1)==' '){
            reverseWords.setLength(reverseWords.length() - 1);
        }else if(reverseWords.charAt(0)==' '){
            reverseWords.deleteCharAt(0);
        }
        return reverseWords.toString();

    }
    private static String reverseString(String m){
        StringBuilder reverseString = new StringBuilder();
        for(int i=0; i<m.length(); i++){
            reverseString.append(m.charAt(m.length()-1-i));
        }
        return reverseString.toString();
    }

    public static void main(String[] args){
        String A ="Let's take LeetCode contest";
        System.out.println(reverseWords(A));
        String B ="take";
        System.out.println(reverseWords(B));
        String C ="";
        System.out.println(reverseWords(C));

    }
}
