# 461.Hamming Distance
# https://leetcode.com/problems/hamming-distance/description/

public class Main{
    private static int hammingDistance(int x, int y){
        int dist = 0;
        int dist2 =0;
        int k = 0;
        if(x>y){
            k=x;
            x=y;
            y=k;
        }
        String xB = Integer.toBinaryString(x);
        String yB = Integer.toBinaryString(y);

        String xR = new StringBuilder(xB).reverse().toString();
        String yR = new StringBuilder(yB).reverse().toString();

        for(int i=0; i<xR.length(); i++){
            dist = dist + Math.abs(yR.charAt(i)-xR.charAt(i));
        }
        for(int j=xB.length(); j<yB.length(); j++){
            dist2 = dist2 + (yR.charAt(j)-'0');
        }
        dist = dist + dist2;
        return dist;
    }
    public static void main(String[] args){
        System.out.println(hammingDistance(1,8));
    }
}
